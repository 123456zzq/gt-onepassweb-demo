/**index.wxss**/

.top {
  position: relative;
  text-align: center;
  display: flex;
  justify-content: center;
  margin-top: -40px;
  width: 100%;
}
.center {  
  width: 90%;
  background-color: white;
  border-radius: 4px;
  padding: 28px 16px;
  box-sizing: border-box;
  color: #232556;
  position: relative;
  top: -100px;
  box-shadow: 0 0 1px rgba(0,0,0,.04), 0 2px 6px rgba(0,0,0,.04), 0 10px 20px rgba(0,0,0,.04);

}
.center .center-title{
  display: flex;
  align-items: center;
  font-weight: 500;
  font-size: 16px;
  line-height: 16px;
  color: #232556;
  justify-content: center;
  margin-bottom: 24px;
}
.center .phone-box, 
.center .message-box {  
  margin-bottom: 20px;
  display: flex;  
  align-items: center;
  position: relative;
  height: 40px;
  padding-left: 16px;
  background-color: #e1e4f0;
  border-radius: 68px;
  box-sizing: border-box;
  justify-content: center;
}
.center .phone-box input,
.center .message-box input {
  margin: 0 17px;
  width: 100%;
  font-size: 12pt;
  font-weight: 600;
  }
.center .phone-box .inputplaceholder,
.center .message-box .inputplaceholder {
  font-size: 10pt;
  font-weight: 500;
}

.center .phone-right .timer {
  color: #858AB4;
  font-size: 10pt;
  width: 100px;
  text-align: right;
  margin-right: 10px
}
.center .phone-box .btnmsg {
  font-size: 10pt;
  width: 70px;
  padding: 2px;
  text-align: center;
  border-radius: 4px;
  background-color: #3973ff;
  color: #fff;
}
.btn {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 100px;
  background-color: #4F59FC;
  color: #fff;  
  height: 45px;
}
.footer {
  position: absolute;
  bottom: 20px;
}
.toast {
  background-color: #000000;
  color: #ffffff;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  padding: 15px 20px;
  border-radius: 8px;
  opacity: 0.7;
  font-size: 13px;
}
.toast .txt {
  display: flex;
  justify-content: center;
  align-content: center;
}