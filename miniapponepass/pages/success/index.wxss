/* pages/success/index.wxss */
.success {
  display: flex;
  flex-direction: column;
  align-items: center;  
  margin-left: 26px;
  margin-right: 26px;
}
.success .success-tip {
  display: flex;
  flex-direction: column;
  justify-content: center;  
  align-items: center;
  animation: success-animation .5s ease-in 1s forwards;
  height: 100vh;
}

.success .success-tip .txt {
  font-size: 20px;
  font-weight: 500;
  color: #3B3E46;
}

@keyframes success-animation {
  to {
    height: 210px;
  }
}

.success .btn {
  background-color: #3973ff;
  color: #fff;  
  width: 100%;
}